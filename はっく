  <script>
    // 背景のコード風アニメーション
    const matrix = document.getElementById('matrix');
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%&';
    let columns = Math.floor(window.innerWidth / 14);
    let drops = Array(columns).fill(0);

    function drawMatrix() {
      // windowサイズ変化に対応
      const newCols = Math.floor(window.innerWidth / 14);
      if (newCols !== columns) {
        columns = newCols;
        drops = Array(columns).fill(0);
      }

      let output = '';
      for (let i = 0; i < columns; i++) {
        const char = chars[Math.floor(Math.random() * chars.length)];
        const y = drops[i] * 14;
        output += `<span style="position:absolute; left:${i * 14}px; top:${y}px;">${char}</span>`;
        drops[i] = (y > window.innerHeight && Math.random() > 0.975) ? 0 : drops[i] + 1;
      }
      matrix.innerHTML = output;
    }

    setInterval(drawMatrix, 60);
  </script>
